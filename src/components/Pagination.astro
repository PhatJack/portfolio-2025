---
import { Icon } from "astro-icon/components";

interface PaginationProps {
  currentPage: number;
  totalPages: number;
  itemsPerPage: number;
  totalItems: number;
  nextUrl: string;
  prevUrl: string;
}

let { currentPage, totalPages, itemsPerPage, totalItems, nextUrl, prevUrl } =
  Astro.props as PaginationProps;
const startIndex = (currentPage - 1) * itemsPerPage + 1;
const endIndex = Math.min(currentPage * itemsPerPage, totalItems);
---

<div class="w-full flex justify-center md:justify-between items-center">
  <div class="flex items-center gap-2">
    <a
      href={prevUrl}
      id="prev"
      class="p-3 size-10 md:size-12 flex justify-center items-center bg-pink-100 text-pink-400 rounded-md hover:bg-pink-200 transition-all"
    >
      <Icon name={"fa6-solid:angle-left"} class={"text-lg md:text-xl"} />
    </a>
    <span
      id="page"
      class="size-10 md:size-12 flex justify-center items-center bg-pink-400 text-white rounded-md hover:bg-pink-200 transition-all text-lg md:text-xl"
    >
      {currentPage}
    </span>
    <a
      href={nextUrl}
      id="next"
      class="p-3 size-10 md:size-12 flex justify-center items-center bg-pink-100 text-pink-400 rounded-md hover:bg-pink-200 transition-all"
    >
      <Icon name={"fa6-solid:angle-right"} class={"text-lg md:text-xl"} />
    </a>
  </div>
  <span class="text-gray-500 text-lg hidden md:inline-block">
    Showing {startIndex}-{endIndex} of {totalItems} items
  </span>
</div>
